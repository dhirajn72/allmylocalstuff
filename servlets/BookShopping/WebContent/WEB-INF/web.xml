<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>BookShopping</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>testServlet</servlet-name>
		<servlet-class>com.jlcindia.books.TestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>testServlet</servlet-name>
		<url-pattern>/searchbooks.jsp</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>addtocart</servlet-name>
		<servlet-class>com.jlcindia.books.AddtoCartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addtocart</servlet-name>
		<url-pattern>/addtocart.jsp</url-pattern>
	</servlet-mapping>


</web-app>